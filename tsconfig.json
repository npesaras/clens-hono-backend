{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true, 
    "noUncheckedIndexedAccess": true,
  
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "dist"]
}