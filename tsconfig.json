{
  "compilerOptions": {
    /* Defaults */
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Paths */
    "baseUrl": ".", // Base URL for resolving imports
    "paths": {
      "@/*": ["./src/*"] // Path alias for importing modules
    },

    /* Output */
    "outDir": "./dist" // Output directory for compiled files
  },
  "include": ["**/*.ts", ".eslintrc.json"],
  "exclude": ["./node_modules", "./dist", "vitest.config.ts"]
}
