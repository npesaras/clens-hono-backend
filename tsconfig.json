{
  "compilerOptions": {
    /* Defaults */
    "target": "ESNext", // Target ECMAScript version
    "moduleResolution": "Bundler", // Module resolution strategy
    "esModuleInterop": true, // Enable ES modules interoperability
    "skipLibCheck": true, // Skip type checking for external libraries
    "allowJs": true, // Allow JavaScript files to be included in the project
    "checkJs": true, // Enable type checking for JavaScript files
    "resolveJsonModule": true, // Enable JSON module resolution
    "moduleDetection": "force", // Force module detection
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "strict": true, // Enable all strict type checking options
    "noUncheckedIndexedAccess": true, // Enable indexed access with undefined checks

    /* Paths */
    "baseUrl": ".", // Base URL for resolving imports
    "paths": {
      "@/*": ["./src/*"] // Path alias for importing modules
    },

    /* Output */
    "outDir": "./dist", // Output directory for compiled files    
  },
  "include": ["**/*.ts", ".eslintrc.json"],
  "exclude": ["./node_modules", "./dist", "vitest.config.ts"]
}